{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "eastus2"
        },
        "virtualMachineName": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D1"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "dbAdminUsername": {
            "type": "string"
        },
        "dbAdminPassword": {
            "type": "securestring"
        },
        "dbServerName": {
            "type": "string"
        }        
    },
    "variables": {
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks','LabVnet')]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/default')]"
    },
    "resources": [
	 {  
	 "apiVersion":"2016-02-01-privatepreview",
	 "kind":"",
	 "location":"westus",
	 "name":"[parameters('dbServerName')]",
	 "properties":{  
		"version":"5.7",
		"administratorLogin":"[parameters('dbAdminUsername')]",
		"administratorLoginPassword":"[parameters('dbAdminPassword')]",
		"storageMB":"51200"
	 },
	 "sku":{  
		"name":"MYSQLB50",
		"tier":"Basic",
		"capacity":"50",
		"size":"51200",
		"family":"SkuFamily"
	 },
	 "type":"Microsoft.DBforMySQL/servers",
	 "resources":[  
		{  
		   "type":"firewallrules",
		   "apiVersion":"2016-02-01-privatepreview",
		   "dependsOn":[  
			  "[concat('Microsoft.DBforMySQL/servers/', parameters('dbServerName'))]"
		   ],
		   "location":"westus",
		   "name":"[concat(parameters('dbServerName'),'firewall')]",
		   "properties":{  
			  "startIpAddress":"0.0.0.0",
			  "endIpAddress":"255.255.255.255"
		   }
		}
	 ]
},
        {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', 'LabNIC')]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "17.04",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'LabNIC')]"
                        }
                    ]
                }
            }
        },
        {
            "name": "LabVnet",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2016-12-01",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "LabNIC",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/LabVnet')]",
                "[concat('Microsoft.Network/publicIpAddresses/LabPubIP')]",
                "[concat('Microsoft.Network/networkSecurityGroups/LabNSG')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', 'LabPubIP')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'LabNSG')]"
                }
            }
        },
        {
            "name": "LabPubIP",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            }
        },
        {
            "name": "LabNSG",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2016-09-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-ssh",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "22",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('virtualMachineName'), '/installscript')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "https://raw.githubusercontent.com/jodehavi/azureunleashed/master/LabVMSetup/scripts/setup.sh"
          ]
        },
        "protectedSettings": {
        	"commandToExecute": "[concat('bash setup.sh ', parameters('dbServerName'), ' ', parameters('dbAdminUsername'), ' ', parameters('dbAdminPassword'))]"
	}
      }
    }
    ]
}
